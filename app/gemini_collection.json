{
	"info": {
		"_postman_id": "ecommerce-combined-final",
		"name": "E-Commerce API - COMPLETE (Main + Gemini Tests)",
		"description": "Combined collection: Main Ecommerce features with additional Gemini pagination and cart test cases.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{"key": "base_url", "value": "http://localhost:5000/api", "type": "default"},
		{"key": "access_token", "value": "", "type": "default"},
		{"key": "refresh_token", "value": "", "type": "default"},
		{"key": "user_id", "value": "", "type": "default"},
		{"key": "product_id", "value": "1", "type": "default"},
		{"key": "category_id", "value": "1", "type": "default"},
		{"key": "order_id", "value": "", "type": "default"}
	],
	"item": [
		{
			"name": "01 - Authentication",
			"item": [
				{
					"name": "Register Customer",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				}
			]
		},
		{
			"name": "02 - Pagination & Search (Gemini Tests)",
			"item": [
				{
					"name": "Products - Page 1 (10 per page)",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/products?page=1&per_page=10",
							"host": ["{{base_url}}"],
							"path": ["products"],
							"query": [
								{"key": "page", "value": "1"},
								{"key": "per_page", "value": "10"}
							]
						}
					}
				},
				{
					"name": "Orders - Page 5 (10 per page)",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/orders?page=5&per_page=10",
							"host": ["{{base_url}}"],
							"path": ["orders"],
							"query": [
								{"key": "page", "value": "5"},
								{"key": "per_page", "value": "10"}
							]
						}
					}
				},
				{
					"name": "Users (Customers) - Large Page Size",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/users/customers?page=1&per_page=25",
							"host": ["{{base_url}}"],
							"path": ["users", "customers"],
							"query": [
								{"key": "page", "value": "1"},
								{"key": "per_page", "value": "25"}
							]
						}
					}
				},
				{
					"name": "Filtered Pagination (Category + Page)",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/products?page=1&per_page=20&category_id={{category_id}}",
							"host": ["{{base_url}}"],
							"path": ["products"],
							"query": [
								{"key": "page", "value": "1"},
								{"key": "per_page", "value": "20"},
								{"key": "category_id", "value": "{{category_id}}"}
							]
						}
					}
				}
			]
		},
		{
			"name": "03 - Cart & Checkout",
			"item": [
				{
					"name": "Add to Cart",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"product_id\": {{product_id}},\n    \"quantity\": 1\n}",
							"options": {"raw": {"language": "json"}}
						},
						"url": {
							"raw": "{{base_url}}/cart/items",
							"host": ["{{base_url}}"],
							"path": ["cart", "items"]
						}
					}
				}
			]
		},
		{
			"name": "04 - User Management (Admin)",
			"item": [
				{
					"name": "Get All Customers (Paginated)",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{access_token}}", "type": "string"}]
						},
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/users/customers?page=1&per_page=25",
							"host": ["{{base_url}}"],
							"path": ["users", "customers"],
							"query": [
								{"key": "page", "value": "1"},
								{"key": "per_page", "value": "25"}
							]
						}
					}
				},
				{
					"name": "Get User by ID",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [{"key": "token", "value": "{{access_token}}", "type": "string"}]
						},
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/users/{{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["users", "{{user_id}}"]
						}
					}
				}
			]
		},
		{
			"name": "05 - Health Check",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/health",
							"host": ["{{base_url}}"],
							"path": ["health"]
						}
					}
				}
			]
		}
	]
}